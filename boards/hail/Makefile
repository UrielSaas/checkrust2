# Makefile for building the tock kernel for the Hail platform

SLOAD=sload
SDB=$(TOCK_BUILD_DIR)/kernel.sdb
SDB_MAINTAINER=$(shell whoami)
SDB_VERSION=$(shell git show-ref -s HEAD)
SDB_NAME=hail.rs
SDB_DESCRIPTION="An OS for the Hail IoT module"

SIZE?=arm-none-eabi-size
OBJCOPY?=arm-none-eabi-objcopy
OBJDUMP?=arm-none-eabi-objdump
OBJDUMP_FLAGS+= --disassemble-all --source --disassembler-options=force-thumb -C --section-headers

JLINK=JLinkExe
JLINK_OPTIONS+=-device ATSAM4LC8C -if swd -speed 1200 -AutoConnect 1
JLINK_SCRIPTS_DIR=jtag/

PLATFORM=hail

.PHONY: all
all: target/sam4l/release/$(PLATFORM) target/sam4l/release/$(PLATFORM).bin

.PHONY: doc
doc:
	@cargo doc --release --target=sam4l.json

.PHONY: target/sam4l/release/$(PLATFORM)
target/sam4l/release/$(PLATFORM):
	@cargo build --release --target=sam4l.json
	@$(SIZE) $@

.PHONY: target/sam4l/debug/$(PLATFORM)
target/sam4l/debug/$(PLATFORM):
	@cargo build --target=sam4l.json
	@$(OBJDUMP) $(OBJDUMP_FLAGS) $@ > target/sam4l/debug/$(PLATFORM).lst
	@$(SIZE) $@

target/sam4l/release/$(PLATFORM).sdb: target/sam4l/release/$(PLATFORM)
	@tput bold ; echo "Packing SDB..." ; tput sgr0
	@$(SLOAD) pack -m "$(SDB_MAINTAINER)" -v "$(SDB_VERSION)" -n "$(SDB_NAME)" -d $(SDB_DESCRIPTION) -o $@ $<

target/sam4l/release/$(PLATFORM).hex: target/sam4l/release/$(PLATFORM)
	@$(OBJCOPY) -Oihex $^ $@

target/sam4l/release/$(PLATFORM).bin: target/sam4l/release/$(PLATFORM)
	@$(OBJCOPY) -Obinary $^ $@

target/sam4l/debug/$(PLATFORM).hex: target/sam4l/debug/$(PLATFORM)
	@$(OBJCOPY) -Oihex $^ $@

.PHONY: clean
clean::
	@cargo clean

.PHONY: debug
debug: target/sam4l/debug/$(PLATFORM)

# upload programs over uart with $(PLATFORM)loader
.PHONY: program
program: target/sam4l/release/$(PLATFORM).sdb
	$(SLOAD) flash $<

# upload kernel over JTAG
.PHONY: flash
flash: target/sam4l/release/$(PLATFORM).hex
	$(JLINK) $(JLINK_OPTIONS) $(JLINK_SCRIPTS_DIR)/flash-kernel.jlink

.PHONY: flash-debug
flash-debug: target/sam4l/debug/$(PLATFORM).hex
	$(JLINK) $(JLINK_OPTIONS) $(JLINK_SCRIPTS_DIR)/flash-debug.jlink

# special command for the fire$(PLATFORM). Flashes the $(PLATFORM)loader bootloader onto
# 	the SAM4L so that sload can communicate with it
.PHONY: flash-bootloader
flash-bootloader: bootloader/bootloader.bin
	$(JLINK) $(JLINK_OPTIONS) $(JLINK_SCRIPTS_DIR)/flash-bootloader.jlink

